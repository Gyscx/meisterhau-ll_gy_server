{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.posture": {
            "states": {
                "default": {
                    "on_entry": ["/say wow"],
                    "transitions": [
                        { "front": "v.rot_to_facing == 1" }
                    ]
                },
                "front": {
                    "on_entry": ["/say front"],
                    "transitions": [
                        { "default": "v.rot_to_facing == 0" }
                    ]
                }
            }
        }
    }
}