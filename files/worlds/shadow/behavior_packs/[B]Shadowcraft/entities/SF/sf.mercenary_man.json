            "sf:mercenary_move": {
                "minecraft:target_nearby_sensor": {
                    "inside_range": 4,
                    "outside_range": 5,
                    "must_see": true,
                    "on_inside_range": {
                        "event": "sf:mercenary_mode_melee",
