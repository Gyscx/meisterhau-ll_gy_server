                "minecraft:tameable": {
                    "probability": 100,
                    "tame_items": "sf:divine_covenant",
                    "tame_event": {
                        "event": "sf:mercenary_tame",
                        "target": "self"
                    }
                }
            },
            "sf:mercenary_mode_tamed": {
