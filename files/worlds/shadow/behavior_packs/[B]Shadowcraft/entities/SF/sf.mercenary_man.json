                    "looping": true,
                    "time": 15,
                    "time_down_event": {
                        "event": "sf:mercenary_event_mode_start_go_home",
                        "filters": {
                            "test": "enum_property",
                            "domain": "sf:target",
                            "subject": "self",
                            "operator": "==",
                            "value": "no_target"
                        }
                    }
                }
            },
