{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.attack": {
            "initial_state": "default",
            "states": {
                "default": {
                    "on_entry": [
                        "/scoreboard players set @s attack_time 0"
                    ],
                    "transitions": [
                        {
                            "attacking": "v.attack_time > 0"
                        }
                    ]
                },
                "attacking": {
                    "on_entry": [
                        "/scoreboard players set @s attack_time 1"
                    ],
                    "transitions": [
                        {
                            "default": "v.attack_time < 0.3"
                        }
                    ]
                }
            }
        }
    }
}