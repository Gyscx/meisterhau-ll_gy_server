    "meisterhau_keys_section": {
        "type": "stack_panel",
        "size": [
            "100%",
            "100%c"
        ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "meisterhau_keys_button_toggle",
