            },
            {
                "image": {
                    "type": "image",
                    "texture": "textures/ui/text_label_box",
                    "size": [
                        "20%",
                        "100% - 4px"
                    ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "controls": [
                        {
                            "label": {
                                "type": "label",
                                "color": "$generic_button_text_color",
                                "size": [
                                    "100%",
                                    "default"
                                ],
                                "text_alignment": "center",
                                "layer": 1,
                                "text": "$touch_key"
                            }
                        }
                    ]
