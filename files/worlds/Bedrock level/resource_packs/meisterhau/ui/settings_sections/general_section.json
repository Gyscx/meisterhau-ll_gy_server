                    "size": [
                        0,
                        8
                    ]
                }
            },
            {
                "@settings_common.white_label": {
                    "$text": "按键 (默认键位)"
                }
            },
            {
                "spacer": {
                    "type": "panel",
                    "size": [
                        0,
                        8
                    ]
                }
            },
            {
                "light_attack@key_binding_info": {
                    "$key_info": "轻击/格挡",
                    "$keyboard_key": "",
                    "$controller_key": "",
                    "$touch_key": ""
                }
            },
            {
                "heavy_attack@key_binding_info": {
                    "$key_info": "重击/锁定",
                    "$keyboard_key": "",
                    "$controller_key": "",
                    "$touch_key": ""
                }
            },
            {
                "sneak@key_binding_info": {
                    "$key_info": "常驻格挡/架势",
                    "$keyboard_key": "LShift",
                    "$controller_key": "",
                    "$touch_key": ""
                }
            },
            {
                "sprint@key_binding_info": {
                    "$key_info": "取消锁定/奔跑",
                    "$keyboard_key": "LCtrl",
                    "$controller_key": "",
